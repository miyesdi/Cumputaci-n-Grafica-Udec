<script>
var num = prompt("Introduce un número entero");
var resultado = par(num);
alert("El número "+num+" es "+resultado)

function par(num) {
	if (num %2 == 0) {	
		return "El numero es par";
	}
	else {	
		return "El numero no es par";
	}
}
</script>

